<resources>

    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme" parent="Theme.AppCompat">

    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Title">
        <item name="android:textSize"> @dimen/font_large </item>
    </style>
    <style name="Subtitle">
        <item name="android:textSize"> @dimen/font_medium </item>
    </style>
    <style name="Content">
        <item name="android:textSize"> @dimen/font_small </item>
    </style>

    <!--    LIST SCREEN     -->
    <style name="ListItem">
        <item name="android:background"> @android:color/white </item>
        <item name="android:clipChildren"> false </item>
        <item name="android:clipToPadding"> false </item>
    </style>

    <style name="ListItemImage">
        <item name="android:padding"> @dimen/list_item_outer_padding </item>
    </style>

    <style name="ListItemTitle">
        <item name="android:lines"> 1 </item>
        <item name="android:maxLines"> 1 </item>
        <item name="android:paddingTop"> @dimen/list_item_outer_padding </item>
        <item name="android:textColor"> @android:color/black </item>
        <item name="android:textSize"> @dimen/font_large </item>
    </style>

    <style name="ListItemSubTitleL1">
        <item name="android:lines"> 1 </item>
        <item name="android:maxLines"> 1 </item>
        <item name="android:paddingTop"> @dimen/list_item_inner_padding </item>
        <item name="android:paddingBottom"> @dimen/list_item_outer_padding </item>
        <item name="android:textColor"> @android:color/darker_gray </item>
    </style>

    <style name="ListItemSubTitleL2">
        <item name="android:lines"> 1 </item>
        <item name="android:maxLines"> 1 </item>
        <item name="android:paddingTop"> @dimen/list_item_inner_padding </item>
        <item name="android:paddingLeft"> @dimen/list_item_inner_padding </item>
        <item name="android:paddingBottom"> @dimen/list_item_outer_padding </item>
        <item name="android:textColor"> @android:color/darker_gray </item>
    </style>

    <!--    DETAIL SCREEN   -->
    <style name="DetailTitleImage">
        <item name="android:scaleType"> centerCrop </item>
        <item name="android:cropToPadding"> false </item>
    </style>
    <style name="DetailTitleText">
        <item name="android:textSize"> @dimen/font_large </item>
        <item name="android:paddingLeft"> @dimen/detail_title_text_padding </item>
        <item name="android:paddingTop"> @dimen/detail_title_text_padding </item>
        <item name="android:paddingBottom"> @dimen/detail_title_text_padding </item>
        <item name="android:textColor"> @android:color/white </item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
    </style>

    <style name="DetailTitleBackgroundBox">
        <item name="android:background"> #8888 </item>
    </style>

    <style name="DetailTitleEditIcon">
        <item name="android:paddingLeft"> @dimen/detail_title_text_padding </item>
        <item name="android:paddingBottom"> @dimen/detail_title_text_padding </item>
        <item name="android:scaleType"> fitCenter </item>
        <item name="android:cropToPadding"> false </item>
    </style>

    <style name="Button_alignBottom">

    </style>



</resources>
