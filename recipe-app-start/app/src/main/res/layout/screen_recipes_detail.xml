<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/recipe_img"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/splash"
        android:scaleType="centerCrop"
        android:cropToPadding="false"/>

    <TextView
        android:id="@+id/recipe_txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/recipe_img"
        android:paddingLeft="16dp"
        android:paddingBottom="16dp"
        android:textSize="48dp"
        android:textColor="@android:color/white"
        android:maxLines="1"
        android:lines="1"
        android:text="Recipe Name"/>

    <ImageView
        android:id="@+id/recipe_edit_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/recipe_img"
        android:layout_toRightOf="@id/recipe_txt_name"
        android:paddingLeft="16dp"
        android:paddingBottom="20dp"
        android:src="@drawable/baseline_create_white_48"
        android:scaleType="centerCrop"
        android:cropToPadding="false"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/recipe_detail_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recipe_img">

        <!--android:layout_alignParentLeft="true"
       android:layout_alignParentTop="true"
       android:layout_alignParentRight="true"-->
    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/recipe_detail_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/recipe_detail_tabs">

    </android.support.v4.view.ViewPager>


</RelativeLayout>