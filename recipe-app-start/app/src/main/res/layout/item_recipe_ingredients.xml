<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/ListItem">

    <com.recipe_app.client.ui.widget.TextViewWidget
        android:id="@+id/rec_ingr_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Qty"
        style="@style/ListItemSubtitle.Type2Column1"/>

    <com.recipe_app.client.ui.widget.TextViewWidget
        android:id="@+id/rec_ingr_uom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/rec_ingr_quantity"
        android:text="uom"
        style="@style/ListItemSubtitle.Type2Column2"/>

    <com.recipe_app.client.ui.widget.TextViewWidget
        android:id="@+id/rec_ingr_txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/rec_ingr_uom"
        android:text="Ingredient Name"
        style="@style/ListItemSubtitle.Type2Column3"/>

</RelativeLayout>
